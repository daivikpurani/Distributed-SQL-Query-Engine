{
  // Java Configuration
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.compile.nullAnalysis.mode": "automatic",
  "java.debug.settings.onBuildFailureProceed": true,
  "java.debug.settings.hotCodeReplace": "auto",
  "java.debug.settings.enableRunDebugCodeLens": true,
  "java.debug.settings.showHex": false,
  "java.debug.settings.showStaticVariables": true,
  "java.debug.settings.showQualifiedNames": false,
  "java.debug.settings.maxStringLength": 0,
  "java.debug.settings.numericPrecision": 0,
  "java.debug.settings.enableJavaDebugger": true,
  
  // Maven Configuration
  "maven.executable.path": "",
  "maven.terminal.useJavaHome": true,
  "maven.terminal.customEnv": [
    {
      "environmentVariable": "JAVA_HOME",
      "value": "${env:JAVA_HOME}"
    }
  ],
  
  // Code Formatting
  "java.format.settings.url": "",
  "java.format.settings.profile": "",
  "java.format.enabled": true,
  "java.saveActions.organizeImports": true,
  "java.format.onType.enabled": true,
  
  // IntelliSense and Code Completion
  "java.completion.enabled": true,
  "java.completion.overwrite": true,
  "java.completion.guessMethodArguments": true,
  "java.completion.favoriteStaticMembers": [
    "org.junit.Assert.*",
    "org.junit.Assume.*",
    "org.junit.jupiter.api.Assertions.*",
    "org.junit.jupiter.api.Assumptions.*",
    "org.junit.jupiter.api.DynamicContainer.*",
    "org.junit.jupiter.api.DynamicTest.*",
    "org.mockito.Mockito.*",
    "org.mockito.ArgumentMatchers.*"
  ],
  
  // Import Organization
  "java.import.gradle.enabled": true,
  "java.import.maven.enabled": true,
  "java.import.exclusions": [
    "**/node_modules/**",
    "**/.metadata/**",
    "**/archetype-resources/**",
    "**/META-INF/maven/**"
  ],
  
  // Protocol Buffers
  "protoc": {
    "path": "",
    "compile_on_save": true,
    "options": [
      "--proto_path=${workspaceRoot}/src/main/proto",
      "--java_out=${workspaceRoot}/target/generated-sources/protobuf/java"
    ]
  },
  
  // Editor Settings
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll": "explicit"
  },
  
  // File Associations
  "files.associations": {
    "*.proto": "proto3",
    "*.properties": "properties"
  },
  
  // Exclude Files
  "files.exclude": {
    "**/target": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  
  // Search Configuration
  "search.exclude": {
    "**/target": true,
    "**/node_modules": true,
    "**/.git": true
  },
  
  // Terminal Configuration
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.cwd": "${workspaceFolder}",
  
  // Git Configuration
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  
  // JSON Configuration
  "json.format.enable": true,
  "json.format.keepLines": false,
  
  // Markdown Configuration
  "markdown.preview.breaks": true,
"markdown.preview.linkify": true,
"git.ignoreLimitWarning": true
}